@page "/CircleCircle"

<style>

	.loading-container {
		display: inline-block;
		padding: 20px;
		width: 100%;
		height: 100%;
		text-align: center;
		vertical-align: middle;
	}

	.circle-circle-container {
		position: relative;
		width: 150px;
		height: 150px;
		text-align: center;
		vertical-align: middle;
		overflow: visible;
	}

	.cc-outer-circle {
		fill: #00f;
	}

	.cc-inner-circle {
		fill: #f00;
			
		animation-name: circle-circle;
		animation-duration: 4s;
		animation-iteration-count: infinite;
		animation-timing-function: ease-in-out;
	}

	.cc-inner-line {
		fill: none;
		stroke: #fff;
		stroke-miterlimit: 10;
		stroke-width: 1.5px;
	}

	.circle-circle {
		transform-origin: 50px 50px;
	}
		
	.cc-2 {
		transform: rotate(22.5deg);
	}

	.cc-3 {
		transform: rotate(45deg);
	}

	.cc-4 {
		transform: rotate(67.5deg);
	}
	
	.cc-5 {
		transform: rotate(90deg);
	}

	.cc-6 {
		transform: rotate(112.5deg);
	}

	.cc-7 {
		transform: rotate(135deg);
	}

	.cc-8 {
		transform: rotate(157.5deg);
	}

	.cc-circle-2 {
			animation-delay: 0.25s;
	}

	.cc-circle-3 {
			animation-delay: 0.5s;
	}

	.cc-circle-4 {
			animation-delay: 0.75s;
	}

	.cc-circle-5 {
		animation-delay: 1s;
	}

	.cc-circle-6 {
		animation-delay: 1.25s;
	}

	.cc-circle-7 {
		animation-delay: 1.5s;
	}

	.cc-circle-8 {
		animation-delay: 1.75s;
	}

	@@keyframes circle-circle {
		0%		{ transform: translateX(0); fill: #f0f; }
		50%		{ transform: translateX(90px); fill: #ff0; }
		100%	{ transform: translateX(0); fill: #f0f; }
	}

</style>


<div class="loading-container">
	<div class="circle-circle-container">
		<svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
			<circle cx="50" cy="50" r="50" class="cc-outer-circle"/>

				<line x1="0" y1="50" x2="100" y2="50" class="cc-inner-line circle-circle cc-1"/>
				<line x1="0" y1="50" x2="100" y2="50" class="cc-inner-line circle-circle cc-2"/>
				<line x1="0" y1="50" x2="100" y2="50" class="cc-inner-line circle-circle cc-3"/>
				<line x1="0" y1="50" x2="100" y2="50" class="cc-inner-line circle-circle cc-4"/>
				<line x1="0" y1="50" x2="100" y2="50" class="cc-inner-line circle-circle cc-5"/>
				<line x1="0" y1="50" x2="100" y2="50" class="cc-inner-line circle-circle cc-6"/>
				<line x1="0" y1="50" x2="100" y2="50" class="cc-inner-line circle-circle cc-7"/>
				<line x1="0" y1="50" x2="100" y2="50" class="cc-inner-line circle-circle cc-8"/>
				<g class="cc-1 circle-circle"><circle cx="5" cy="50" r="5" class="cc-inner-circle cc-circle-1"/></g>
				<g class="cc-2 circle-circle"><circle cx="5" cy="50" r="5" class="cc-inner-circle cc-circle-2"/></g>
				<g class="cc-3 circle-circle"><circle cx="5" cy="50" r="5" class="cc-inner-circle cc-circle-3"/></g>
				<g class="cc-4 circle-circle"><circle cx="5" cy="50" r="5" class="cc-inner-circle cc-circle-4"/></g>
				<g class="cc-5 circle-circle"><circle cx="5" cy="50" r="5" class="cc-inner-circle cc-circle-5"/></g>
				<g class="cc-6 circle-circle"><circle cx="5" cy="50" r="5" class="cc-inner-circle cc-circle-6"/></g>
				<g class="cc-7 circle-circle"><circle cx="5" cy="50" r="5" class="cc-inner-circle cc-circle-7"/></g>
				<g class="cc-8 circle-circle"><circle cx="5" cy="50" r="5" class="cc-inner-circle cc-circle-8"/></g>
		</svg>
	</div>
</div>